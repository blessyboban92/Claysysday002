/* Styles for the footer */
body {
      background-color:  #C7B097;
    }
    
    .container {
      max-width: 400px;
      margin: 30px auto;
	  position:relative;
      padding: 35px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: #98AFC7;
    }
    
    .container h1 {
      text-align: center;
    }
    
    .container input[type=email],
	 .container input[type=text],
	.container input[type=date],
	.container input[type=number],
	.container input[type=tel],
	.container input[type=email],
	.container textarea[id=address],
	.container input[type=textarea],
	.container textarea[id=subject],
	.container select[name=country],
	.container select[name=state],
	.container select[name=city],
    .container input[type=password]
	{
      width: 100%;
      padding: 15px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }
    
    .container button {
      background-color: #4CAF50;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      cursor: pointer;
      width: 100%;
    }
    
    .container button:hover {
      opacity: 0.8;
    }
    
    .container .cancelbtn {
      width: auto;
      padding: 10px 18px;
      background-color: #f44336;
    }
    
    .container .clearfix::after {
      content: "";
      clear: both;
      display: table;
    }
    
    @media screen and (max-width: 300px) {
      .container .cancelbtn,
      .container button {
        width: 100%;
      }
    }
	.footer {
      background-color: black;
      color: white;
      text-align: center;
      padding: 20px;
	  border: 1px solid black;
	  margin-top: auto;
	   position: fixed;
      left: 0;
      bottom: 0;
      width: 100%;
    }
	
	footer p {
     margin: 0; 
	 }
